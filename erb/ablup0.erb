	;欲情の珠で上げる
	SIF JUEL:5 < C
		K |= 1

	PRINTFORM [2] - %PALAMNAME:5%の珠×{C}……

	IF K == 0
		PRINT ＯＫ
	ELSE
		SIF K & 1
			PRINT 珠不足 
