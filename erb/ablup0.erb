IF D > 0
	;屈服の珠で上げる
	SIF JUEL:6 < D
		L |= 1

	PRINTFORM [3] - %PALAMNAME:6%の珠×{C}……

	IF L == 0
		PRINT ＯＫ
	ELSE
		SIF L & 1
			PRINT 珠不足 
		SIF L & 2
			PRINT 経験不足 
	ENDIF
	PRINTL 
ELSE
	L = 256
ENDIF

PRINTL [100] - やめる

INPUT
IF (RESULT < 0 || RESULT > 3) && RESULT != 100
	RESTART
ELSEIF I != 0 && RESULT == 0
	PRINTL 条件を満たしていません。
	RESTART
ELSEIF J != 0 && RESULT == 1
	PRINTL 条件を満たしていません。
	RESTART
ELSEIF K == 256 && RESULT == 2
	RESTART
ELSEIF K != 0 && RESULT == 2
	PRINTL 条件を満たしていません。
	RESTART
ELSEIF L == 256 && RESULT == 3
	RESTART
